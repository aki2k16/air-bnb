<div class="contents">
  <h2 class="title" style="margin-bottom: 24px;">Log in</h2>
  <div class="main-admin">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class:"email"%><br />
        <%= f.email_field :email, placeholder: "メールアドレス", class: "text-feild", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, placeholder: "password", class: "text-feild",autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions" style="margin-bottom: 10px;">
        <%= f.submit "Log in", id:"login-button", class:"btn btn-primary btn-lg btn-block"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
