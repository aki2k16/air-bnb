<div id="header">
  <header>
    <div class="header__main clearfix">
      <div class="header__main--title">
        <a href="/"><%= image_tag 'air-bnb.png', alt:"ロゴ", class:"logo_image" %></a>
      </div>
      <div class="header__main--nav">
        <ul class="header__main--nav-menu">
          <li class="header__main--title-list"><%= link_to "ヘルプ"%></li>
          <% if user_signed_in? %>
          <li class="header__main--title-list log-out"><%= link_to "ログアウト", destroy_user_session_path,　method: :delete%></li>
          <% end %>
        </ul>
      </div>
    </div>
  </header>
</div>
<div class="review_wrapper clerfix">
<div class="review__content--left">
  <div class="review__content--box">
    <div class="review__content--image" style="background-image: url(<%= @room.image %>);">
    </div>
    <p style="font-size: 24px;"><%= @room.title %></p>
</div>
</div>
  <div class="review__content--right">
    <div class="review__content--form">
      <div class="reviewform__header">
        <p>レビュー投稿フォーム</p>
      </div>
      <div class="reviewform__inputarea">
        <%= form_for [@room, @review] do |f| %>
          <div class="formgroup">
            <label class="control-label">レビューを入力してください</label>
            <%= f.text_area :body, :size=>"60x8", placeholder: "The location is perfect and really easy to access all the great things to see and do in Kyoto. ", class: "form-control", autofocus: true %>
          </div>
          <div class="formgroup">
            <label class="control-label">Image</label>
            <%= file_field :page, {},{style: "width: 100%;"} %>
          </div>
            <%= button_tag type:"submit", class: "btn btn-defult" do %>
              投稿する
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
</div>
    <!-- footerエリア -->
    <footer>
      <div class="footer__container">
          <div class="footer__container-top clearfix">
            <div class="language__selecter">
              <div id="language__selecter-1">
                <select class="language__selecter-text">
                  <option value="en">日本語</option>
                  <option value="ja">Japanese</option>
                </select>
              </div>
              <div id="language__selecter-2">
                <select class="language__selecter-text">
                  <option value="en">English</option>
                  <option value="ja">Japanese</option>
                </select>
              </div>
            </div>
            <div class="footer__container-right">
              <div class="info-air-bnb">
                <h1 class="bottom-info-subject">air-bnb</h1>
                <ul class="bottom-info-contents">
                  <li>Airbnbとは</li>
                  <li>採用情報</li>
                  <li>プレス</li>
                  <li>ポリシー</li>
                  <li>ヘルプ</li>
                  <li>ダイバーシティ＆つながる</li>
                </ul>
              </div>
              <div class="recommend">
                <h1 class="bottom-info-subject">スタッフのおすすめ</h1>
                <ul class="bottom-info-contents">
                  <li>信頼&安全</li>
                  <li>お友達紹介クーポン</li>
                  <li>Airbnb Citizen</li>
                  <li>出張</li>
                  <li>ガイドブック</li>
                </ul>
              </div>
              <div class="info-hosting">
                <h1 class="bottom-info-subject">ホスティング</h1>
                <ul class="bottom-info-contents">
                  <li>ホストになる理由</li>
                  <li>おもてなしの心</li>
                  <li>ホストの責任</li>
                </ul>
              </div>
            </div>
          <hr class="footer__divider" width="1080px">
          <div class="footer__container--bottom clearfix">
            <div class="footer__container--bottom-left">
              <p>© Airbnb, Inc.practice</P>
            </div>
            <div class="footer__container--bottom-right">
              <p class="footer__container--bottom-right-text ">利用規約とプライバシー</P>
              <p class="footer__container--bottom-right-text">サイトマップ</P>
              <span>
                <i class="fa fa-facebook" aria-hidden="true"></i>
              </span>
              <span>
                <i class="fa fa-twitter" aria-hidden="true"></i>
              </span>
              <span>
                <i class="fa fa-instagram" aria-hidden="true"></i>
              </span>
        </div>
    </footer>
    <div id="back-to-top" style="width: 1080px; margin: auto; text-align: center; display: none">
      <button type="button" style="border: none; background-color: #fff;">
        <span><i class="fa fa-chevron-up fa-3x fa-fw" aria-hidden="true" style="padding: 0;"></i></span>
      </button>
    </div>
